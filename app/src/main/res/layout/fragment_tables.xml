<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sohagan.com.quicksit_host.TablesFragment"
    android:background="#ffffff"
    android:padding="15dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/availability"
        android:id="@+id/ava"
        android:layout_gravity="left|top"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@id/ava"
        android:layout_marginTop="7dp"
        android:textSize="25dp"
        android:text="22/64" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two"
        android:id="@+id/t1"
        android:background="#80ff80"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/ava"
        android:shadowColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two"
        android:id="@+id/t2"
        android:background="#80ff80"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:shadowColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two"
        android:id="@+id/t3"
        android:background="#80ff80"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/t2"
        android:layout_alignParentStart="true"
        android:shadowColor="#fffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two"
        android:id="@+id/t4"
        android:background="#80ff80"
        android:layout_below="@+id/t3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:shadowColor="#ffffff" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="@string/eight"
        android:id="@+id/t7"
        android:background="#80ff80"
        android:layout_alignTop="@+id/t4"
        android:layout_alignParentEnd="true"
        android:shadowColor="#ffffff" />

    <at.markushi.ui.CircleButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/t5"
        app:cb_color="#80ff80"
        app:cb_pressedRingWidth="8dip"
        android:layout_below="@+id/t1"
        android:layout_alignStart="@+id/t6" />

    <at.markushi.ui.CircleButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/t6"
        app:cb_color="#80ff80"
        app:cb_pressedRingWidth="8dip"
        android:layout_below="@+id/t2"
        android:layout_toEndOf="@+id/ava" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/four"
        android:id="@+id/t5_text"
        android:layout_alignBottom="@+id/t5"
        android:layout_alignStart="@+id/total"
        android:textSize="20dp"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="31dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/four"
        android:id="@+id/t6_text"
        android:layout_alignBottom="@+id/t6"
        android:layout_alignStart="@+id/total"
        android:textSize="20dp"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="31dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tables"
        android:id="@+id/table_text"
        android:layout_below="@+id/ava"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="27dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choice"
        android:layout_alignBottom="@+id/table_text"
        android:layout_alignEnd="@+id/total"
        android:layout_below="@+id/ava"
        android:layout_toEndOf="@+id/table_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3/4"
        android:id="@+id/table_avail"
        android:layout_alignTop="@+id/choice"
        android:layout_toEndOf="@+id/total"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/table_text"
        android:layout_alignEnd="@+id/t7"
        android:text="@string/dash"
        android:textColor="#000000" />

</RelativeLayout>
